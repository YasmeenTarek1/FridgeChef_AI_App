<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFFF8">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="28dp"
                    android:text="Your Recipes"
                    android:textColor="#901431"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.439"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/font1"/>

                <TextView
                    android:id="@+id/goCrazyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="200dp"
                    android:layout_marginTop="110dp"
                    android:text="Go Crazy ðŸ¤¯"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/viewAll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textColor="#FF5C67"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@+id/goCrazyTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.913"
                    app:layout_constraintStart_toEndOf="@+id/goCrazyTextView"
                    app:layout_constraintTop_toTopOf="@+id/goCrazyTextView" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/favoriteRecipesTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/goCrazyTextView" />

                <TextView
                    android:id="@+id/emptyText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="14dp"
                    android:text="No Recipes Available"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF5C67"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/recyclerView1"
                    app:layout_constraintBottom_toTopOf="@+id/recyclerView1"
                    app:layout_constraintStart_toStartOf="@+id/recyclerView1"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView1" />

                <TextView
                    android:id="@+id/favoriteRecipesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="83dp"
                    android:layout_marginBottom="160dp"
                    android:text="Loved ones ðŸ’Œ"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/cookedRecipesTextView"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/viewAll2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textColor="#FF5C67"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@+id/favoriteRecipesTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.917"
                    app:layout_constraintStart_toEndOf="@+id/favoriteRecipesTextView"
                    app:layout_constraintTop_toTopOf="@+id/favoriteRecipesTextView" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/cookedRecipesTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/favoriteRecipesTextView" />

                <TextView
                    android:id="@+id/emptyText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="14dp"
                    android:text="No Recipes Available"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF5C67"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/recyclerView2"
                    app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
                    app:layout_constraintStart_toStartOf="@+id/recyclerView2"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView2" />

                <TextView
                    android:id="@+id/cookedRecipesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="83dp"
                    android:layout_marginBottom="160dp"
                    android:text="Made it âŒ›"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/favoriteRecipesTextView" />

                <TextView
                    android:id="@+id/viewAll3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textColor="#FF5C67"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginEnd="-5dp"
                    app:layout_constraintBottom_toBottomOf="@id/cookedRecipesTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.913"
                    app:layout_constraintStart_toEndOf="@+id/cookedRecipesTextView"
                    app:layout_constraintTop_toTopOf="@+id/cookedRecipesTextView" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="70dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
