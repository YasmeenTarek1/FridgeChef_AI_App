<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">
        <!-- Summary Box -->
            <TextView
                android:id="@+id/summaryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adjust your nutrient preferences"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="16dp"/>

            <!-- Circular Sliders -->
            <!-- Carbs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs"/>
            <SeekBar
                android:id="@+id/carbSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"/>

            <ProgressBar
                android:id="@+id/carbProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>

            <!-- Protein -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"/>
            <SeekBar
                android:id="@+id/proteinSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"/>

            <ProgressBar
                android:id="@+id/proteinProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>

            <!-- Fat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat"/>
            <SeekBar
                android:id="@+id/fatSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"/>

            <ProgressBar
                android:id="@+id/fatProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>

            <!-- Sugar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugar"/>
            <SeekBar
                android:id="@+id/sugarSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"/>

            <ProgressBar
                android:id="@+id/sugarProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>

            <!-- Calories -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"/>
            <SeekBar
                android:id="@+id/caloriesSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"/>

            <ProgressBar
                android:id="@+id/caloriesProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>

            <!-- Search Button -->
            <Button
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Recipes"
                android:padding="16dp"
                android:layout_marginTop="32dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            android:visibility="gone"/>

    </LinearLayout>


</layout>